<!-- include header -->
<%- include('include/_header') %>

    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <a href="/add-todotask" class="border-shadow">
                    <span class="text-gradient">Add New Todo Task <i class="fas fa-plus"></i></span>
                </a>
            </div>

            <!-- form handling -->
            <form method="POST">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Priority</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%- include('include/_show') %>
                    </tbody>
                </table>
            </form>
        </div>
    </main>

    <!-- include footer -->
    <%- include('include/_footer') %>
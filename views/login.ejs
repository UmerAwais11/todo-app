
<main id="site-main" style="text-align: center;margin: 250px;height: auto;width: auto;">
  <div class="container">
    <h1>LOGIN </h1>
    <form action="/api/login" method="POST">
      <div class="new_user">
        <div class="form-group" style="height: 7%;">
          <label for="name" class="text-light" style="margin: 20px;">Name</label>
          <input type="hidden" name="id" value="">
          <input type="text" name="name" value="" placeholder="Enter Username" style="border-radius: 10px;height: 2rem;width: 20rem;">
        </div>
        <div class="form-group">
          <label for="password" class="text-light" style="margin: 10px;">Password</label>
          <input type="password" name="password" placeholder="Enter Password"  style="border-radius: 10px;height: 2rem;width: 20rem;">
        </div>

        <div class="form-group">
          <button type="submit" class="btn text-dark update"style="margin: 10px;margin: 10px;width: 10%;height: 4%;background: cadetblue;border-radius: 10px;">login</button>
        </div>

      </div>
    </form>
  </div>
</main>